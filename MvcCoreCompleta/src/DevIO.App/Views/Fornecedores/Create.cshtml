@model DevIO.App.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Cadastrar Fornecedor";
    Layout = "_Layout";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoFornecedor" class="control-label">Tipo Fornecedor</label> <br/>
                <input asp-for="TipoFornecedor" type="radio" value="1" checked /> Pessoa Física <br/>
                <input asp-for="TipoFornecedor" type="radio" value="2" /> Pessoa Jurídica
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <hr/>
            <h4>Endereço</h4>
            <partial name="_Endereco"/>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info" role="button">Voltar</a>
            </div>
        </form>
    </div>
</div>
