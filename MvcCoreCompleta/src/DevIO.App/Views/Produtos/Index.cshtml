@model IEnumerable<DevIO.App.ViewModels.ProdutoViewModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h4>@ViewData["Title"]</h4>

<p>
    <a asp-action="Create" class="btn btn-info" role="button">Adicionar</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fornecedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/imagens/@item.Imagem" alt="@item.Nome"  style="width: 70px;"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @item.Valor.ToString("C")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>

            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" role="button"><span class="fa fa-search"></span></a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" role="button"><span class="fa fa-pencil-alt"></span></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
